    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Picker x:Name="StrategyPicker" Title="{xct:Translate ShowSolution}" TitleColor="Red"
                    SelectedIndex="{Binding SelectedStrategy}" Margin="5">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Optimal</x:String>
                        <x:String>FIFO</x:String>
                        <x:String>Least Recently Used</x:String>
                        <x:String>Second Chance / Clock</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <StackLayout Orientation="Horizontal" Padding="25, 25, 0, 25">
                <ContentView Content="{Binding Table_Header}">
                </ContentView>
                <ScrollView  Orientation="Horizontal" x:Name="scrollView">
                    <ContentView Content="{Binding Table}">
                    </ContentView>
                </ScrollView>
            </StackLayout>
            <Button Text="Next" Command="{Binding ButtonNextStep}"/>
            <Button Text="Back" Command="{Binding ButtonLastStep}"/>
            <Button Text="Show Solution" Command="{Binding ButtonCompleteSolution}"/>
            <Button Text="Info" Command="{Binding ButtonInfo}"/>
            <Button Text="New Exercise" Command="{Binding ButtonNewExercise}"/>
        </StackLayout>


