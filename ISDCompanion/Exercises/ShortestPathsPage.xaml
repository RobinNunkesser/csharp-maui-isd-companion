<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ISDCompanion" 
             x:Class="ISDCompanion.ShortestPathsPage"
             Title="{local:Localize ShortestPaths}">
    <Shell.TabBarIsVisible>false</Shell.TabBarIsVisible>
    <ContentPage.Content>
        <StackLayout>
                <Label Text="Graph" VerticalOptions="Center"/>
                <Label Text="{Binding Graph}" VerticalOptions="Center" FontFamily="SourceCodePro-Regular"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="{local:Localize ShowSolution}" VerticalOptions="Center"/>
                <Switch x:Name="Switch" IsToggled="false" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
            <Label Text="{Binding Solution}"
                   HorizontalOptions="StartAndExpand"
                   VerticalOptions="Center"
                       IsVisible="{Binding Source={x:Reference Switch}, Path=IsToggled}" FontFamily="SourceCodePro-Regular"/>
            <Button Text="{local:Localize NewValues}" VerticalOptions="EndAndExpand" Command="{Binding NewParams}" Clicked="Button_Clicked"/>
        </StackLayout>          
    </ContentPage.Content>
</ContentPage>
