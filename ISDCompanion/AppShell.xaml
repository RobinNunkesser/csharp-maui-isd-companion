<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ISDCompanion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ISDCompanion"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="{local:Localize Mensa}" Icon="restaurant_menu_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:MensaPage}" />
        </Tab>
        <Tab Title="{local:Localize Exercises}" Icon="assignment_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:ExercisesPage}" />
        </Tab>
        <Tab Title="{local:Localize Courses}" Icon="calendar_today_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:CoursesPage}" />
        </Tab>
        <Tab Title="{local:Localize Profs}" Icon="school_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:ProfsPage}" />
        </Tab>
        <Tab Title="{local:Localize Settings}" Icon="settings_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>

