<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudyCompanion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudyCompanion"
    xmlns:localization="clr-namespace:StudyCompanion.Resources.Strings"
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        <Tab Title="{x:Static localization:AppResources.Mensa}" Icon="restaurant_menu_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:MensaPage}" />
        </Tab>
        <Tab Title="{x:Static localization:AppResources.Exercises}" Icon="assignment_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:ExercisesPage}" />
        </Tab>
        <Tab Title="{x:Static localization:AppResources.Courses}" Icon="calendar_today_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:CoursesPage}" />
        </Tab>
        <Tab Title="{x:Static localization:AppResources.Profs}" Icon="school_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:ProfsPage}" />
        </Tab>
        <Tab Title="{x:Static localization:AppResources.Settings}" Icon="settings_black_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>

