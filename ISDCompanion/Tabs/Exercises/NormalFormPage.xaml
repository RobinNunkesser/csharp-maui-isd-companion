<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:ISDCompanion.Shared.Pages;assembly=ISDCompanion.Shared"
             xmlns:localization="clr-namespace:StudyCompanion.Resources.Strings"
             x:Class="StudyCompanion.NormalFormPage"
             Title="{x:Static localization:AppResources.NormalForm}">

    <Grid RowDefinitions="Auto,*">
        <Label Grid.Row="0"
               Text="{x:Static localization:AppResources.NormalFormText}"
               LineBreakMode="WordWrap"
               Padding="10" />
        <BlazorWebView x:Name="blazorWebView"
                       Grid.Row="1"
                       HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app"
                               ComponentType="{x:Type pages:NormalForm}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>
    </Grid>

</ContentPage>